{
  "name": "three-pixel-font",
  "version": "0.0.5",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "lib/index.js",
  "description": "A pixel font renderer for three.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bunnybones1/three-pixel-font.git"
  },
  "scripts": {
    "start": "yarn dev",
    "dev": "webpack-dev-server --mode development --progress --color --config config/webpack/webpack.config.local.js",
    "dist": "yarn dist:clean && yarn dist:build",
    "dist:clean": "rm -rf ./dist",
    "dist:build": "webpack --mode production --color --config config/webpack/webpack.config.dist.js",
    "lib": "yarn lib:clean && yarn lib:build",
    "lib:clean": "rm -rf ./lib",
    "lib:build": "webpack --mode production --color --config config/webpack/webpack.config.lib.js",
    "build": "node ./esbuild.js && tsc -p tsconfig.module.json --emitDeclarationOnly",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:fix": "yarn run lint:fixeslint && yarn run lint:fixprettier",
    "lint:eslint": "eslint ./src --ext .ts",
    "lint:prettier": "prettier-check --config ./.prettierrc './src/**/*.ts'",
    "lint:fixprettier": "prettier --config ./.prettierrc --write './src/**/*.ts'",
    "lint:fixeslint": "eslint ./src --ext .ts --fix"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "performance-polyfill": "^0.0.3",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.4"
  },
  "peerDependencies": {
    "three": "^0.134.0"
  },
  "devDependencies": {
    "@types/three": "^0.134.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "copy-webpack-plugin": "^9.0.1",
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.38",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-plugin-glsl": "^1.1.0",
    "eslint": "^7.32.0",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "glslify-import-loader": "^0.1.2",
    "glslify-loader": "^2.0.0",
    "html-webpack-plugin": "^5.3.2",
    "prettier": "^2.3.2",
    "prettier-check": "^2.0.0",
    "raw-loader": "^4.0.2",
    "serve": "^12.0.0",
    "source-map-loader": "^3.0.0",
    "terser-webpack-plugin": "^5.2.3",
    "three": "^0.134.0",
    "three-bmfont-text": "^3.0.1",
    "threejs-camera-controller-first-person-desktop": "^5.0.1",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "4.4.2",
    "typescript-styled-plugin": "^0.18.0",
    "webpack": "^5.52.0",
    "webpack-assets-by-type-plugin": "^0.1.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.0"
  },
  "types": "./lib/index.d.ts",
  "bugs": {
    "url": "https://github.com/bunnybones1/three-pixel-font/issues"
  },
  "homepage": "https://github.com/bunnybones1/three-pixel-font#readme",
  "directories": {
    "lib": "lib"
  },
  "keywords": [
    "font",
    "gamedev",
    "threejs",
    "webgl"
  ],
  "author": "Tomasz Dysinski"
}
